<?xml version="1.0" encoding="utf-8"?>
<joey.com.leetroid.ProblemListItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/problem_region_star"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="18dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:src="@mipmap/unstarred"
        />
    <TextView
        android:id="@+id/problem_region_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:textSize="17dp"
        />
    <TextView
        android:layout_toRightOf="@id/problem_region_star"
        android:layout_toLeftOf="@id/problem_region_difficulty"
        android:layout_centerVertical="true"
        android:id="@+id/problem_region_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="17dp"
        />
</joey.com.leetroid.ProblemListItemView>